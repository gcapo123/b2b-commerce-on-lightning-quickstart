                if (searchOption.searchStatus || !searchOption.searchStatus) {
                    
                    // Save Search Options
                    var daysBetween = parseInt('{!daysBetween}');
                    $('input[name="checkbox4"]').prop("checked", searchOption.searchStatus);
                    
