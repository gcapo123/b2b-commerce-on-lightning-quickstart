                            $("#select-01 option").each(function() {
                                if ($(this).text() == 'Week scale') {
                                    $(this).attr("selected", true);
                                }
                            });
                        }
                            else if(daysBetween>=51 && daysBetween<=120)
                            {
                                $("#select-01 option").each(function() {
                                    if ($(this).text() == 'Month scale') {
                                        $(this).attr("selected", true);
                                    }
                                });
                            }
                                else if(daysBetween>=120 && daysBetween<=360)
